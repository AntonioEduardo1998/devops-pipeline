{
  "name": "devops-pipeline",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AntonioEduardo1998/devops-pipeline.git",
  "author": "Antonio Eduardo <antonioeduardo1998@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --exit-child src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start:prod": "node dist/server.js",
    "start:migrate:prod": "npx prisma migrate deploy && npm run start:prod",
    "clean": "rm -rf node_modules package-lock.json yarn.lock dist",
    "test": "npx jest",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "ts-node src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "3.4.2",
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "babel-jest": "^27.3.1",
    "jest": "^27.3.1",
    "prisma": "3.4.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}